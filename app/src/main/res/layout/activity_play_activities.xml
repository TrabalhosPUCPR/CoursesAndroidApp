<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.playActivitiesFragments.PlayActivities">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentActivityContainer"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/play_activities_nav_graph"
            android:layout_marginBottom="54dp"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/playActivitiesBottomNavigationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/activities_bottombar"
            app:navigationIcon="@drawable/ic_action_home"
            android:layout_gravity="bottom" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>